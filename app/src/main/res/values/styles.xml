    <style name="button_round" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:colorPrimary">@color/active_button_color</item>
        <item name="android:background">@drawable/rounded_button_selector</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">@dimen/_18sdp</item>
        <item name="android:paddingLeft">@dimen/_18sdp</item>
